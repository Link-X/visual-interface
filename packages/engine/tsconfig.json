{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "allowUnreachableCode": true,
    "allowUnusedLabels": false,
    "alwaysStrict": false,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "jsx": "react",
    "sourceMap": true,
    "module": "ES2015",
    "noImplicitAny": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "paths": {
      "src": [
        "./src"
      ]
    },
    "target": "ESNext",
    "outDir": "./ts/dist",
    "declaration": true,
    "declarationDir": "./ts/lib",
    "allowJs": true,
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "dom"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

